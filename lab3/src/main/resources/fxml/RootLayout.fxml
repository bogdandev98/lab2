<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="com.controller.RootLayoutController">
  <top>
    <MenuBar>
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#handleNew" text="New" />
            <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Open" />
            <MenuItem mnemonicParsing="false" onAction="#handleCreateTable" text="Create table" />
            <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Save" />
            <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Save as" />
            <MenuItem mnemonicParsing="false" onAction="#handleSaveToDataBase" text="Save to Data Base" fx:id="saveToDataBaseButton" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Show">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#handleShowLogger" text="Logger" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
  </top>
</BorderPane>
